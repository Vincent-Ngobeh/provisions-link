# ==============================================
# Django Security
# ==============================================
SECRET_KEY=your-secret-key-here-generate-using-django
DEBUG=False

# ==============================================
# Database Configuration (Local Docker)
# ==============================================
# For local Docker development (matches docker-compose.yml)
DB_NAME=provisions_link
DB_USER=provisions_user
DB_PASSWORD=provisions_pass
DB_HOST=db
DB_PORT=5432

# For Railway/Production (use DATABASE_URL instead)
# DATABASE_URL=postgresql://user:password@host:port/database

# ==============================================
# Redis Configuration (for Channels & Celery)
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ==============================================
# CORS & Security Settings
# ==============================================
# CORS Origins (comma-separated for production)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://provisions-link-frontend.vercel.app

# Allowed hosts (for Django - production only)
ALLOWED_HOSTS=localhost,127.0.0.1,provisions-link-production.up.railway.app

# ==============================================
# Django Settings Module
# ==============================================
DJANGO_SETTINGS_MODULE=provisions_link.settings.development

# ==============================================
# Frontend Configuration
# ==============================================
FRONTEND_URL=http://localhost:5173

# ==============================================
# Stripe Payment Integration
# ==============================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_WEBHOOK_SECRET_DESTINATION=whsec_your_webhook_destination_here
STRIPE_PLATFORM_ACCOUNT_ID=acct_your_account_id_here

# ==============================================
# AWS S3 Configuration
# ==============================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_STORAGE_BUCKET_NAME=provisions-link-media
AWS_STATIC_BUCKET_NAME=provisions-link-static
AWS_S3_REGION_NAME=eu-west-2

# ==============================================
# External API Keys
# ==============================================
# Food Standards Agency API (UK)
FSA_API_BASE_URL=https://api.ratings.food.gov.uk

# Mapbox API (for maps and geocoding)
MAPBOX_API_TOKEN=your_mapbox_token_here

# Unsplash API (for product images)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
UNSPLASH_SECRET_KEY=your_unsplash_secret_key_here

# ==============================================
# Email Configuration (Optional)
# ==============================================
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@provisionslink.com

# ==============================================
# Error Tracking (Optional)
# ==============================================
SENTRY_DSN=your_sentry_dsn_here

# ==============================================
# GDAL/GEOS Configuration
# ==============================================
# Windows only - leave empty for Linux/Mac/Docker
GDAL_LIBRARY_PATH=
GEOS_LIBRARY_PATH=
OSGEO_BIN_PATH=

# ==============================================
# Logging & Monitoring (Optional)
# ==============================================
DJANGO_LOG_LEVEL=INFO
REQUEST_LOGGING_ENABLED=False
RATE_LIMITING_ENABLED=False